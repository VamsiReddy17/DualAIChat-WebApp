modules = ["nodejs-20", "python-3.12", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Full App"

[[workflows.workflow]]
name = "Start Web Server"
author = 41777580
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"

[[workflows.workflow]]
name = "Start Full App"
author = 41777580
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"server.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"backend_server.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python backend_server.py &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 7071
externalPort = 3000
